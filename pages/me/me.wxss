/**index.wxss**/
.container {
  background: #F1F1F1;
  min-height: 100vh;
}
.user-header {
  margin: 0;
}

.userinfo {
  margin: 0 auto;
  width: 100%; 
}

.userinfo-avatar {
  float: left;
  width: 128rpx;
  height: 128rpx;
  border: 2px solid #f1f1f1;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.user-feed-back {
  float: left;
  width: 100%;
  height: 400rpx;
  margin: 25rpx auto;
  line-height: 22px;
}
.user-feed-back view {
  font-size: 14px;
}
.user-feed-back image {
  margin-right: 5px;
  vertical-align: middle;
  width:20px;
  height: 20px;
}

.bind-button {
  margin-top: 300rpx;
  width: 100%;
}

.bind-button button {
  background-color: red;
  width: 85%;
  font-size: 14px;
  font-weight: bold;
  color: #f0f0f0;
}
