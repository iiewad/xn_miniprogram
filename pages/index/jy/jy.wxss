/* pages/index/jy/jy.wxss */

.borrow-list {
  width: 100%;
  height: 100vh;
  position: fixed;
  background-color: #E6E6E6;
}

.borrow-item {
  width: 95%;
  height: 275rpx;
  margin: 20rpx auto;
  font-size: 32rpx;
  background-color: #D6B572;
  color: #03243A;
  border-radius: 10rpx;
}

.borrow-item view {
  height: 50rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  text-align: right;
  line-height: 50rpx;
  margin: 5rpx 0;
  border-bottom: 1px solid #EFEBD9;
}

.borrow-item view label {
  float: left;
}