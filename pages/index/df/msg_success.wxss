.container {
  width: 100%;
  background-color: #ffffff;
}

.top-layout {
  width: 100%;
  height: 200rpx;
  position: fixed;
  z-index: 999;
  margin: 0;
  padding: 0;
  background-color: #EFEBD9;
  border-bottom: 1px solid #fafafa;
}
.energy-balance-layout {
  width: 100%;
  height: 200rpx;
  position: relative;
  padding-top: 50rpx;
}

.energy-balance,
.energy-price {
  padding-left: 50rpx;
  font-size: 32rpx;
  margin-top: 10rpx;
}

.sun {
  position: absolute;
  top: 2%;
  right: 2%;
  font-size: 64rpx;
}

.energy-layout {
  width: 100%;
  padding-top: 200rpx;
}

.energy-card {
  width: 95%;
  height: 190rpx;
  margin: 20rpx auto;
  background-color: #fafafa;
  box-shadow: 1px 0px 2px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
  line-height: 60rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  position: relative;
}

.card-date, .card-used-energy, .card-balance {
  width: 90%;
  height: 67rpx;
  margin: 0 auto;
  padding-left: 20rpx;
}

.card-label {
  width: 30%;
  float: left;
}
.card-data {
  font-weight: 500;
  width: 40%;
  float: left;
}
.image {
  position: absolute;
  width: 64rpx;
  height: 64rpx;
  right: 1%;
  bottom: 1%;
}