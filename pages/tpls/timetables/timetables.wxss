.null-kb {
  background-color: #fff;
  width: 95%;
  height: 60rpx;
  font-size: 36rpx;
  margin: 0 auto;
  padding: 50rpx;
  border: 1px solid #f1f1f1;
  border-radius: 10rpx;
  position: relative;
}

.null-kb text {
  font-size: 80rpx;
  position: absolute;
  right: 100rpx;
  top: 15%;
}
