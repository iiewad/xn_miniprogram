.kb-list {
  font-size: 32rpx;
}

.kb-item {
  width: 95%;
  height: 260rpx;
  background-color: #f1f1f1;
  margin: 10rpx auto;
  line-height: 50rpx;
  color: #333;
  padding: 30rpx;
}

.kb-item label {
  color: #000;
}

.kb-item text {
  padding-left: 30rpx;
}

